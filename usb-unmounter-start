#!/bin/bash

TEXTDOMAINDIR=/usr/share/locale 
TEXTDOMAIN=mx-usb-unmounter-start

if [ -e /tmp/usb-unmounter-$USER-lockfile ]; then
	mx-usb-unmounter &
	exit 0
	else
	touch /tmp/usb-unmounter-$USER-lockfile
fi

TITLE=$"Unmount Media"
LIST=$"List Devices"
HELP=$"Help"
ABOUT=$"About"
QUIT=$"Quit"


yad --notification --image=media-eject \
--command=mx-usb-unmounter \
--text=$TITLE \
--menu="$LIST!mx-usb-unmounter!drive-removable-media|$HELP!mx-viewer http://www.mepiscommunity.org/wiki/help-files/help-mx-usb-unmounter!help-browser|$ABOUT!mx-usb-unmounter -h!help-about|$QUIT!quit!process-stop"

rm  /tmp/usb-unmounter-$USER-lockfile

exit 0